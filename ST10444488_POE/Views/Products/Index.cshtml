@model IEnumerable<ST10444488_POE.Models.Product>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Products";
}

<h2 class="text-center mb-4">Fresh from the Oven</h2>

<div class="text-end mb-4">
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add Product
    </a>
</div>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var product in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                @if (!string.IsNullOrEmpty(product.ImageUrl))
                {
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" />
                }
                else
                {
                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height:200px;">
                        <span class="text-muted">No image available</span>
                    </div>
                }

                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Description</p>
                    <p class="card-text fw-bold text-muted">R @product.Price.ToString("0.00")</p>
                </div>
                <div class="card-footer text-center">
                    <a asp-controller="Orders" asp-action="Create" asp-route-id="@product.RowKey" class="btn btn-outline-primary">
                        Order Now
                    </a>
                </div>
            </div>
        </div>
    }
</div>


