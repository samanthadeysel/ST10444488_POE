@model ST10444488_POE.Models.Product

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit Product";
}

<h1 class="mb-4">Edit Product</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RowKey" />

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Category" class="form-label"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Sizes" class="form-label">Sizes (comma-separated)</label>
                <input asp-for="Sizes" class="form-control" />
                <span asp-validation-for="Sizes" class="text-danger"></span>
            </div>

            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="form-group mb-3">
                    <label class="form-label">Current Image</label><br />
                    <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 200px; border-radius: 8px;" />
                </div>
            }

            <div class="form-group mb-4">
                <label class="form-label">Upload New Image</label>
                <input type="file" name="ImageFile" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
