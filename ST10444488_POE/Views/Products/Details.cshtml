@model ST10444488_POE.Models.Product

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Product Details";
}

<h1 class="mb-4">Product Details</h1>

<div class="card shadow-sm p-4 bg-light">
    <div class="row">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" style="max-height: 300px;" />
            }
            else
            {
                <div class="text-muted">No image available</div>
            }
        </div>

        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-4">Name</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4">Description</dt>
                <dd class="col-sm-8">@Model.Description</dd>

                <dt class="col-sm-4">Price</dt>
                <dd class="col-sm-8">R @Model.Price</dd>

                <dt class="col-sm-4">Category</dt>
                <dd class="col-sm-8">@Model.Category</dd>

                @if (!string.IsNullOrEmpty(Model.Sizes))
                {
                    <dt class="col-sm-4">Available Sizes</dt>
                    <dd class="col-sm-8">
                        @foreach (var size in Model.Sizes.Split(','))
                        {
                            <span class="badge bg-warning text-dark me-1">@size.Trim()</span>
                        }
                    </dd>
                }
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.RowKey" class="btn btn-primary me-2">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
