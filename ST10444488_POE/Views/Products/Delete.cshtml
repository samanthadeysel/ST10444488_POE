@model ST10444488_POE.Models.Product

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Delete Product";
}

<h1 class="mb-4 text-danger">Delete Product</h1>

<h3 class="mb-3">Are you sure you want to delete this item?</h3>

<div class="card shadow-sm p-4 mb-4 bg-light">
    <h4 class="mb-3">Product Details</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>

        <dt class="col-sm-3">Price</dt>
        <dd class="col-sm-9">R @Model.Price</dd>

        <dt class="col-sm-3">Category</dt>
        <dd class="col-sm-9">@Model.Category</dd>

        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <dt class="col-sm-3">Image</dt>
            <dd class="col-sm-9">
                <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 200px; border-radius: 8px;" />
            </dd>
        }
    </dl>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="RowKey" />
        <button type="submit" class="btn btn-danger me-2">Confirm Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
