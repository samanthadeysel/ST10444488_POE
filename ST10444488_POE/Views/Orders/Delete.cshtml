@model ST10444488_POE.Models.Order

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Delete Order";
}

<h2>Delete Order</h2>

<p>Are you sure you want to delete this order for <strong>@Model.FirstName @Model.LastName</strong>?</p>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="partitionKey" value="@Model.PartitionKey" />
    <input type="hidden" name="rowKey" value="@Model.RowKey" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

