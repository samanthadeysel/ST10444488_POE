@model IEnumerable<ST10444488_POE.Models.Order>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Orders";
}

<h2>Orders</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New Order
    </a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Products</th>
            <th>Total Cost</th>
            <th>Order Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.FirstName @order.LastName</td>
                <td>@order.ProductNames</td>
                <td>R @order.TotalCost</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-rowKey="@order.RowKey" asp-route-partitionKey="@order.PartitionKey">Details</a> |
                    <a asp-action="Edit" asp-route-rowKey="@order.RowKey" asp-route-partitionKey="@order.PartitionKey">Edit</a> |
                    <a asp-action="Delete" asp-route-rowKey="@order.RowKey" asp-route-partitionKey="@order.PartitionKey">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
