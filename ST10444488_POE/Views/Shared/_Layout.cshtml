<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Ginger Bakery</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>

    <header class="top-banner">
        <div class="banner-content">
            <ul class="nav-left">
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="Products" asp-action="Index">Products</a></li>
            </ul>

            <div class="brand-title">GINGER BAKERY</div>

            <ul class="nav-right">
                <li><a asp-controller="Orders" asp-action="Index">Orders</a></li>
                <li><a asp-controller="Customers" asp-action="Index">Customer</a></li>
                <li><a asp-controller="Contact" asp-action="Index">Contact</a></li>
            </ul>
        </div>
    </header>


    <main role="main" class="container mt-4">
        @RenderBody()
    </main>

    <div class="love-banner">
        MADE WITH LOVE
    </div>

    <footer class="text-center py-3 text-muted">
        © @DateTime.Now.Year Ginger Bakery. All rights reserved.
    </footer>
    @RenderSection("Scripts", required: false)
</body>
</html>
